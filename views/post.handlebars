<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <section>
    <h3>Comments</h3>
    <div>
      {{#each comments}}
      <p>{{content}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
      {{/each}}
    </div>
  </section>

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Comment</label>
      <input class="form-input" type="text" id="comment-content" name="comment-content" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" id={{id}}>Submit</button>
    </div>
  </form>

</div>

<script src="/js/comment.js"></script>